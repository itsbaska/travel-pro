<!DOCTYPE html>
<html>
  <head>
    <title>Travel</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% p logged_in? %>
      <%= javascript_pack_tag 'navigation' %>
      <%= content_tag :div,
        id: "navigation-bar",
        data: {
          loggedIn: logged_in?,
          currentUser: current_user
        }.to_json do %>
      <% end %>
    <%= yield %>
  </body>
</html>
